<Window x:Class="WpfMovieRental.wpfListMovies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMovieRental"
        mc:Ignorable="d"
        Title="List of Movies" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Botão para recarregar a lista -->
        <Button Content="🔄 Reload"
                Width="100"
                Height="30"
                Click="BtnReload_Click"
                Margin="0,0,0,10"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dgMovies"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Producer" Binding="{Binding Producer}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
