<Window x:Class="WpfMovieRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMovieRental"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Content="Movies"
                Grid.Row="1"
                Margin="0,10,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnMovie_Click"/>
                

        <Button Content="Customer"
                Grid.Row="2"
                Margin="0,50,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnCustomer_Click"/>

        <Button Content="Rental"
                Grid.Row="3"
                Margin="0,90,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnRental_Click"/>

        <Button Content="Payment Methods"
                Grid.Row="4"
                Margin="0,130,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnPaymentMethods_Click"/>

        <Button Content="List Movies"
                Grid.Row="5"
                Margin="0,170,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnListMovies_Click"/>

        <Button Content="List Customers"
                Grid.Row="6"
                Margin="0,210,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnListCustomers_Click"/>

        <Button Content="List Rental"
                Grid.Row="7"
                Margin="0,250,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnListRentals_Click"/>

        <Button Content="List Payment Methods"
                Grid.Row="7"
                Margin="0,290,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btnListPaymentMethods_Click"/>
    </Grid>
</Window>
