<Window x:Class="WpfMovieRental.wpfcustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMovieRental"
        mc:Ignorable="d"
        Title="wpfcustomer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nome:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNome" Grid.Row="0" Margin="100,0,0,5" Width="250"/>

        <TextBlock Text="Tax Number:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTaxNumber" Grid.Row="1" Margin="100,0,0,5" Width="250"/>

        <TextBlock Text="Cell Phone:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCellPhone" Grid.Row="2" Margin="100,0,0,5" Width="100"/>

        <Button Content="Save Customer"
                Grid.Row="3"
                Margin="0,10,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Click="BtnSave_Click"/>

        <TextBlock x:Name="lblStatus"
                   Grid.Row="4"
                   Margin="0,20,0,0"
                   Foreground="Green"
                   FontWeight="Bold"
                   TextAlignment="Center"/>
    </Grid>
</Window>
